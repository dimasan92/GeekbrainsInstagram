<resources>
    <!--Themes-->
    <style name="RedAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryRedTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkRedTheme</item>
        <item name="colorAccent">@color/colorAccentRedTheme</item>
    </style>

    <style name="BlueAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlueTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlueTheme</item>
        <item name="colorAccent">@color/colorAccentBlueTheme</item>
    </style>

    <style name="GreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreenTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreenTheme</item>
        <item name="colorAccent">@color/colorAccentGreenTheme</item>
    </style>

    <!--Styles-->
    <style name="SettingsSubtitleStyle">
        <item name="android:layout_margin">@dimen/small_margin</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="ThemeButtonStyle">
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="RedThemeButtonStyle" parent="ThemeButtonStyle">
        <item name="android:background">@color/colorPrimaryRedTheme</item>
    </style>

    <style name="BlueThemeButtonStyle" parent="ThemeButtonStyle">
        <item name="android:background">@color/colorPrimaryBlueTheme</item>
    </style>

    <style name="GreenThemeButtonStyle" parent="ThemeButtonStyle">
        <item name="android:background">@color/colorPrimaryGreenTheme</item>
    </style>
</resources>
